<h1>New Advertisement</h1>

<div class="row">
  <%= form_for @advertisement do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter product name" %>
    </div>
    <div class="form-group">
      <%= f.label :copy %>
      <%= f.text_field :copy, class: 'form-control', placeholder: "Enter product description" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, class: 'form-control', placeholder: "Enter price" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
    <% end %>
</div>
