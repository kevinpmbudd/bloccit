<div class="row">
  <h1>Sign Up Confirmation</h1>
  <h3>Are you sure these values are correct?</h3>
  <br>
  <p><strong>Email:</strong> <%= params[:user][:email] %></p>
  <p><strong>Name:</strong> <%= params[:user][:name] %></p>
  <table>
    <tr>
      <td><%= button_to "Yes", {controller: "users", action: "create", params: params_for_user}, class: 'btn btn-success' %></td>
      <td><%= button_to("No", new_user_path, method: "get", class: 'btn btn-default') %></td>
    </tr>
  </table>
</div>
